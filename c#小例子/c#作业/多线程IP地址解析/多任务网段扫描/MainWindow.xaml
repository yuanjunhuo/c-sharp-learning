            <Grid HorizontalAlignment="Left" Height="77" Margin="10,0,0,-4" VerticalAlignment="Top" Width="600">
                <Label x:Name="label1" Content="地址前缀:" HorizontalAlignment="Left" Margin="19,26,0,0" VerticalAlignment="Top"/>
                <Label x:Name="label2" Content="起始值:" HorizontalAlignment="Left" Margin="184,28,0,0" VerticalAlignment="Top"/>
                <Label x:Name="label3" Content="终止值:" HorizontalAlignment="Left" Margin="338,28,0,0" VerticalAlignment="Top"/>
                <TextBox x:Name="textBox1" HorizontalAlignment="Left"  Margin="93,30,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="86" Height="20" Background="#FFBBB5B5"/>
